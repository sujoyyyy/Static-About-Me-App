<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#e0e0e0"
    tools:context=".MainActivity">

<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<RelativeLayout

    android:layout_width="match_parent"

    android:layout_height="match_parent"
  >

    <ImageView
        android:id="@+id/photo_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:layout_below="@id/textview"
        android:src="@drawable/batman" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:textSize="28sp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:padding="20dp"
        android:text="Sujoy Datta(B.Tech+M.Tech)"
        android:fontFamily="sans-serif-light" />

    <TextView
        android:id="@+id/career"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/photo_image_view"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:text="CAREER OBJECTIVE"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/career"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:text="To acquire a position that affords me the opportunity to bring my technical expertise, problem solving
skills and willingness to learn to make an organization successful. "
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/black"
        android:paddingBottom="5dp"
        android:text="CONTACT DETAILS : \nAddress : Chennai, Tamil Nadu\nGithub : https://github.com/sujoyyyy\nEmail : ced18i063@iiitdm.ac.in\nMobile no. : +91-7044444684"
        android:textSize="17sp"/>


</RelativeLayout>
</ScrollView>
</LinearLayout>